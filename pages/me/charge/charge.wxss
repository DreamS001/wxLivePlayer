.diamondContainer {
   display:flex;
   flex-direction: column;
   color: #333333;
}
page {
  margin-top: 40rpx !important;
}
.top {
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  text-align: center;
  font-size: 34rpx;
  color: #1a53bb;
}
.balance {
   display:flex;
   flex-direction: column;
   align-items:center;
   font-size: 30rpx;
   margin-bottom: 54rpx;
   margin-top: 33rpx;
}
.balance image {
  width: 106rpx;
  height: 91rpx;
  display:inline-block;
  margin-bottom: 30rpx;
}
.balance .money {
  color: #f06774;
}
.charge {
  display:flex;
  flex-direction: column;
}
.charge .title {
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  color: #999999;
  background: #f4f4f4;
  line-height: 60rpx;
  padding-left: 30rpx;
}
.charge .list {
  display:flex;
  flex-direction: column;
  margin: 0 30rpx;
}
.list .item {
  width: 100%;
  height: 111rpx;
  border-bottom: 1px solid #f4f4f4;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 32rpx;
  align-items: center;
}
.item .left {
  display:flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.item .left image {
   width: 38rpx;
   height: 33rpx;
   margin-right: 16rpx; 
}
.item .left .give {
   width: 200rpx;
   color: #dcdcdc;
   font-size: 24rpx;
   position: absolute;
   left: 206rpx;
}
.item .right {
  width: 106rpx;
  height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 40rpx;
  background: linear-gradient(to right,#ff72a0,#fa8ebe);
  border-radius: 30rpx;
  overflow:hidden;
}
.tel {
  margin-top: 60rpx;
  font-size: 30rpx;
  color: #333333;
  text-align: center;
}